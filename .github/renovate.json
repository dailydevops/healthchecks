{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":approveMajorUpdates",
    ":semanticCommitType(chore)",
    ":timezone(Europe/Berlin)",
  ],
  "packageRules": [
    {
      "matchDatasources": [ "nuget" ],
      "extends": [
        ":label(dependency:nuget)",
        ":semanticCommitScope(nuget)",
      ]
    }
  ]
}
