<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(_TargetFrameworks)</TargetFrameworks>
    <DefineConstants>USE_CONFIGURABLE_HEALTHCHECK;$(DefineConstants)</DefineConstants>

    <Description>Contains HealthChecks for Microsoft SqlServer, based on `Microsoft.Data.SqlClient`.</Description>
    <PackageTags>$(PackageTags);sqlserver;mssql</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="NetEvolve.Arguments" />
    <PackageReference Include="NetEvolve.Extensions.Strings" />
    <PackageReference Include="NetEvolve.Extensions.Tasks" />
  </ItemGroup>

  <Import Project="$(SolutionDir)\src\HealthChecks.Abstractions.Shared\src\NetEvolve.HealthChecks.Abstractions.Shared\NetEvolve.HealthChecks.Abstractions.Shared.projitems" Label="Shared" />

</Project>
